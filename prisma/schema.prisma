// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.0.x", "linux-musl-openssl-3.0.x"]
}

model Subscriptions {
  id                  String   @id @default(uuid())
  periodicity         String
  chargeCount         Int      @map("charge_count")
  chargeFrequencyDays Int      @map("charge_frequency_days")
  startDate           DateTime @map("start_date")
  status              String
  statusDate          DateTime @map("status_date")
  cancellationDate    DateTime? @map("cancellation_date")
  amount              Float
  nextCycleDate       DateTime? @map("next_cycle_date")
  subscriberId        String   @map("subscriber_id")

  @@map("Subscriptions")
}

